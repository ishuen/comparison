extends layout

block content
  div(class='container')
    div(class='row')
      div(class='col-sm-8')
      div(class='col-sm-4' style='background-color: #f5f5f5')
        h4 progress
        div(class='progress')
          if env == 'inu'
            - var str = Number(14 * (trial - 12)) + '%'
            div(class='progress-bar progress-bar-success' role='progressbar' style='width:' + Number(14 * (trial - 12)) + '%;' aria-valuenow= Number(14 * (trial - 12)) aria-valuemin='0' aria-valuemax='100') #{str}
    div(class='row')
      div(class='col-sm-12')
        iframe(id='surveyIframe' src='https://docs.google.com/forms/d/e/1FAIpQLScPApgwh6_qtUwsAo1Uk45ujKaebLeKWpJrVII-ypwpVrDRqA/viewform?embedded=true&entry.1905076335=' + userId + '&entry.2128922355=' + trial width='100%' height='600' frameborder='0' marginheight='0' marginwidth='0') Loading...
    script.
      let env = !{JSON.stringify(env)}
      let userId = !{JSON.stringify(userId)}
      let trial = !{JSON.stringify(trial)}
      let algorithm = !{JSON.stringify(algorithm)}
      count = 0
      $('#surveyIframe').on('load', function(){
        count++
        if(count == 2){
          //- if (trial == 18) {
          //-   window.location.href='/survey8/' + env + '/' + userId
          //- } else {
          //-   trial++
          //-   window.location.href='/experiment2/' + env + '/' + trial + '/' + userId + '/' + algorithm
          //- }
          window.location.href='/survey6/' + env + '/' + trial + '/' + userId
        }  
      })