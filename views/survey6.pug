doctype html
html
  head
    title= 'experiment 2 - postsurvey'
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/surveys.css')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  body
    script(src='http://d3js.org/d3.v3.min.js', charset='utf-8')
    script(src='https://code.jquery.com/jquery-3.3.1.min.js', charset='utf-8')
    script(src='/scripts/questionSets.js', type='text/javascript')
    script.
      let defaultPoint = !{JSON.stringify(defaultPoint)}
      let left = !{JSON.stringify(left)}
      let right = !{JSON.stringify(right)}
      let userChoice = !{JSON.stringify(userChoice)}
    - var items = Array.from(new Set([defaultPoint, left, right, userChoice]))
    h1 Satisfaction of the Choice
    h3 #{setDesc}
    form(id='form', name='foodForm', class='foodForm', action='/survey6/' + trial + '/' + userId, method='post', onsubmit='return validateFormSurvey6()')
      input(type='hidden', name='trial', value=trial)
      input(type='hidden', name='userId', value=userId)
      each i in items
        div
          div.smallCard
            h3 #{i.foodname}
            img(src= i.path alt= i.foodname)
            table.scoresSmall
              tr
                th.taste Taste
                th.health Health
              tr
                td.taste #{i.taste}
                td.health #{i.health}
        table.smallLikert
          col(width='30%')
          tr
            th
            th Strongly disagree
            th Disagree
            th Neither agree nor disagree
            th Agree
            th Strongly agree
          - var desc = ['I am satisfied with my choice.', 'I am confident that this is the best.']
          - var qn = ['satisfaction', 'confidence']
          each k in [0, 1]
            tr
              td #{desc[k]}
              each val in [1, 2, 3, 4, 5]
                td
                  input(name=i.id + '-' + qn[k] + '-' + i.state, type='radio', value= val)
        br
      button(class='surSubmit', type='submit', value='submit') Submit